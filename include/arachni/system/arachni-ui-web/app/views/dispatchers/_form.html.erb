<%= simple_form_for( @dispatcher ) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
        <div class="row-fluid">
            <div class="span6">
                <div class="row-fluid">
                    <div class="span6">
                        <%= f.input :address, label: false, placeholder: 'Address' %>
                    </div>
                    <div class="span6">
                        <%= f.input :port, label: false, placeholder: 'Port' %>
                    </div>
                </div>

                <div class="row-fluid">
                    <div class="span12">
                        <%= f.input :description, label: false, placeholder: 'Description',
                                    hint: 'You can use Markdown for text formatting.' %>
                    </div>
                </div>
            </div>

            <div class="span6">
                <% if can? :make_default, @dispatcher %>
                    <div class="row-fluid">
                        <div class="span12">
                            <%= f.input :global %>
                            <p class="help-block">
                                Make this dispatcher globally available.
                            </p>
                        </div>
                    </div>
                <% end %>

                <div class="row-fluid">
                    <div class="span12">
                        <%= f.association :users, label: 'Share with:',
                                          collection: User.all - [current_user] %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-actions">
        <%= f.button :submit %>
    </div>
<% end %>

